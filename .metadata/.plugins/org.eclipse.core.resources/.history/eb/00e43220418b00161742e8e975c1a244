package DAOs;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.util.ArrayList;
import java.util.List;

import JDBC.ConnectionFactory;
import modelos.Comentario;
import modelos.Usuario;

public class ComentarioDAO {

	public List<Comentario> getComentariosTopico(int id) throws Exception{
		List<Comentario> comentarios = new ArrayList<>();
		
		try(Connection c = ConnectionFactory.getConexao()) {
			PreparedStatement stm = c.prepareStatement("select * from comentario"
					+ " where id_topico=?");
			stm.setInt(1, id);
			ResultSet rs = stm.executeQuery();
			
			while(rs.next()){
				Comentario com = new Comentario();
				
				PreparedStatement pegarAutor = c.prepareStatement("select nome from usuario where login=?");
				pegarAutor.setString(1, rs.getString("login"));
				ResultSet autor = pegarAutor.executeQuery();
				autor.next();
				
				com.setComentario(rs.getString("comentario"));
				com.setLogin(rs.getString("login"));
				com.setId_comentario(rs.getInt("id_comentario"));
				com.setId_topico(rs.getInt("id_topico"));
				comentarios.add(com);
			}
			
			return comentarios;
		} catch (Exception e) {
			throw new Exception("Erro ao recuperar coment√°rios", e);
		}
	}
	
	public void adicionaComentario(Comentario com){
		
		try(Connection c = ConnectionFactory.getConexao()) {
			PreparedStatement stm = c.prepareStatement("insert into comentario"
					+ "(comentario, login, id_topico) VALUES (?, ?, ?)");
			stm.setString(1, com.getComentario());
			stm.setString(2, com.getLogin());
			stm.setInt(3, com.getId_topico());
			stm.executeUpdate();
			
			Usuario u = new UsuarioDAO().getUsuario(com.getLogin());
			PreparedStatement stmUsuario = c.prepareStatement("UPDATE usuario SET "
					+ "pontos=pontos+3 WHERE login=?");
			stmUsuario.setString(1, u.getLogin());
			stmUsuario.executeUpdate();
	} catch (SQLException e) {
		// TODO Auto-generated catch block
		e.printStackTrace();
	} catch (Exception e) {
		// TODO Auto-generated catch block
		e.printStackTrace();
	}
	}

}
